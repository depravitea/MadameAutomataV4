{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "nodejs_20"
          ]
        },
        "install": {
          "cmds": [
            "npm i"
          ]
        },
        "build": {
          "cmds": [
            "npm run build"
          ]
        }
      },
      "start": {
        "cmd": "npm start"
      }
    }
  }
}